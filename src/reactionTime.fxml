<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="root"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ReactionTime"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: red">

    <VBox layoutX="150" layoutY="100">
        <Button fx:id="start" text="Click To Begin"
                onAction="#startTimer"/>
        <Button fx:id="finish" text="Click Me When Screen Turns Green"
                onAction="#finishTimer"/>
        <Label fx:id="reactionTime"/>
    </VBox>
</Pane>
