<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VerbalMemory">
   <children>
      <HBox alignment="CENTER" layoutX="-2.0" layoutY="354.0" prefHeight="46.0" prefWidth="606.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#goBackHome" text="Back to Home Screen" />
            <Button mnemonicParsing="false" onAction="#retryGame" text="Retry Game" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="37.0" prefWidth="604.0">
         <children>
            <Label fx:id="livesLabel" prefHeight="37.0" prefWidth="66.0" text="Lives:" />
            <Label fx:id="scoreLabel" prefHeight="44.0" prefWidth="71.0" text="Score:" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="-1.0" layoutY="200.0" prefHeight="58.0" prefWidth="606.0" spacing="10.0">
         <children>
            <Button fx:id="seenButton" mnemonicParsing="false" onAction="#checkIfSeen" text="SEEN" />
            <Button fx:id="newButton" mnemonicParsing="false" onAction="#checkIfNew" text="NEW" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="-2.0" layoutY="279.0" prefHeight="37.0" prefWidth="606.0">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" text="Start" />
         </children>
      </HBox>
      <Label fx:id="wordLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="109.0" prefHeight="66.0" prefWidth="594.0" textAlignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <Label fx:id="highScoreLabel" alignment="TOP_LEFT" layoutX="465.0" layoutY="8.0" prefHeight="46.0" prefWidth="145.0" />
   </children>
</AnchorPane>
